#!/usr/bin/env node
var fs = require('fs');
var args = process.argv;
if (args.length < 3) {
  console.log('Usage:');
  console.log('write [file]: write data from standard input to a file');
}
else {
  var ws = fs.createWriteStream(args[2]);
  ws.on('error', function(err) {
    console.log('Error writing file!');
    process.exit();
  });
  process.stdin.on('data', function(data) {
    ws.write(data);
  });
}
