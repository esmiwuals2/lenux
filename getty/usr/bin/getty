#!/usr/bin/node
var fs = require('fs');
var cp = require('child_process');
var ttyFd = fs.openSync(process.argv[2], 'r+');
var writeStream = fs.createWriteStream(null, {fd: ttyFd});
var readStream = fs.createReadStream(null, {fd: ttyFd});
process.stdout.write('\033[2J\033[H');
cp.spawn(process.argv[3], [], { stdio: [writeStream, readStream, writeStream] });
